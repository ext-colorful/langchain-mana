# Application
APP_NAME="Food Recognition System"
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=5513
API_PREFIX=/api/v1

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/food_system
DB_POOL_SIZE=20
DB_ECHO=false

# Vector Store (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_INGREDIENTS=ingredients
CHROMA_COLLECTION_MEALS=meals

# Embedding Model
EMBEDDING_MODEL_NAME=text2vec-base-chinese
EMBEDDING_DEVICE=cpu
EMBEDDING_DIMENSION=768

# AI Model
DEFAULT_LLM_PROVIDER=openai
MODEL_NAME=gpt-4
MODEL_TEMPERATURE=0.0
MODEL_MAX_TOKENS=2048

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4

# Zhipu AI
ZHIPU_API_KEY=your-zhipu-key
ZHIPU_MODEL_NAME=glm-4-plus
ZHIPU_VISION_MODEL_NAME=glm-4v-plus

# RAG
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7

# Task Configuration
TASK_BATCH_SIZE=1000
TASK_SYNC_INTERVAL_SECONDS=60

# File Upload
UPLOAD_DIR=./data/uploads
UPLOAD_MAX_SIZE_MB=10

# Agent Runtime
AGENT_MAX_ITERATIONS=15
AGENT_TIMEOUT_SECONDS=300
